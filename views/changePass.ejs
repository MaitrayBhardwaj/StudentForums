<% layout('layouts/boilerplate.ejs') %>

<link rel="stylesheet" href="/css/newThread.css">
<link rel="stylesheet" href="/css/verify.css">

<div class="container">
	<div class="formCont">
		<h1>Enter the OTP</h1>
		<p>Enter the One-Time Password sent on your registered email to verify</p>
		<form action="/password/verify" class="needs-validation" method="POST" novalidate>
			<input type="text" name="OTP" placeholder="Enter the OTP">
			<input type="password" name="newPass" placeholder="Enter the new password">
			<button>Submit</button>
		</form>
		<a href="/password/verify">Resend OTP</a>
	</div>
</div>